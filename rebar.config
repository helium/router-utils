{erl_opts, [
    debug_info,
    {parse_transform, lager_transform},
    warnings_as_errors
]}.

{deps, [
    {lager, "3.9.2"},
    {hackney, "1.18.1"},
    {jsx, "3.1.0"},
    {xorf, "1.0.0"},
    {iso8601, ".*", {git, "https://github.com/erlsci/iso8601.git", {tag, "1.3.1"}}},
    {xxhash, {git, "https://github.com/pierreis/erlang-xxhash", {branch, "master"}}},
    {libp2p_crypto, {git, "https://github.com/helium/libp2p-crypto.git", {tag, "v1.5.2"}}}
]}.

{plugins, [
    {rebar3_format, "0.8.2"},
    {erlfmt, "0.10.0"}
]}.

{format, [
    {ignore, []},
    {files, [
        "rebar.config",
        "{src,include,test}/**/*.{hrl,erl,app.src}",
        "config/{sys,test}.{config,config.src}"
    ]},
    {formatter, erlfmt_formatter},
    {options, #{print_width => 100, ignore_pragma => true}}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used
]}.
