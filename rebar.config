{erl_opts, [
    debug_info,
    {parse_transform, lager_transform},
    warnings_as_errors
]}.

{deps, [
    {lager, "3.9.2"},
    {xorf, {git, "https://github.com/helium/erlang-xorf.git", {branch, "main"}}}
]}.

{plugins, [
    {rebar3_format, "0.8.2"},
    {erlfmt, "0.10.0"}
]}.

{format, [
    {ignore, []},
    {files, [
        "rebar.config",
        "{src,include,test}/**/*.{hrl,erl,app.src}",
        "config/{sys,test}.{config,config.src}"
    ]},
    {formatter, erlfmt_formatter},
    {options, #{print_width => 100, ignore_pragma => true}}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used
]}.
